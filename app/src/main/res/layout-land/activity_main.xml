<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.falloutcharacterquiz.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/lefttopline" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="@string/title"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/righttopline" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"
                    android:text="@string/char_name"
                    android:textSize="@dimen/question_text_size" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/falloutTextColor"
                    android:textSize="@dimen/answer_text_size" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"
                    android:text="@string/sex"
                    android:textSize="@dimen/question_text_size" />

                <RadioGroup
                    android:id="@+id/rg_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton

                        android:id="@+id/male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_male"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_female"
                        android:textSize="@dimen/answer_text_size" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"

                    android:text="@string/question_problems"
                    android:textSize="@dimen/question_text_size" />

                <RadioGroup
                    android:id="@+id/rg_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/answer1_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer1_problems"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer2_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer2_problems"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer3_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer3_problems"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer4_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer4_problems"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer5_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer5_problems"
                        android:textSize="@dimen/answer_text_size" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"
                    android:text="@string/question_responsibility"
                    android:textSize="@dimen/question_text_size" />

                <RadioGroup
                    android:id="@+id/rg_q3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/answer1_responsibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer1_responsibility"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer2_responsibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer2_responsibility"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer3_responsibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer3_responsibility"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer4_responsibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer4_responsibility"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer5_responsibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer5_responsibility"
                        android:textSize="@dimen/answer_text_size" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"
                    android:text="@string/question_equipment"
                    android:textSize="@dimen/question_text_size" />

                <CheckBox
                    android:id="@+id/antidepresives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer1_equipment" />

                <CheckBox
                    android:id="@+id/survival_kit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer2_equipment" />

                <CheckBox
                    android:id="@+id/encyclopedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer3_equipment" />

                <CheckBox
                    android:id="@+id/sun_glasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer4_equipment" />

                <CheckBox
                    android:id="@+id/nothing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer5_equipment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"
                    android:text="@string/question_party"
                    android:textSize="@dimen/question_text_size" />

                <RadioGroup
                    android:id="@+id/rg_q4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/answer1_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer1_party"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer2_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer2_party"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer3_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer3_party"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer4_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer4_party"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer5_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer5_party"
                        android:textSize="@dimen/answer_text_size" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/answer_margin_bottom"
                    android:layout_marginTop="@dimen/question_margin_top"
                    android:text="@string/question_fear"
                    android:textSize="@dimen/question_text_size" />

                <RadioGroup
                    android:id="@+id/rg_q5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/answer1_fear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer1_fear"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer2_fear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer2_fear"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer3_fear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer3_fear"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer4_fear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer4_fear"
                        android:textSize="@dimen/answer_text_size" />

                    <RadioButton
                        android:id="@+id/answer5_fear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer5_fear"
                        android:textSize="@dimen/answer_text_size" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/button_margin_top"
                android:background="@android:color/holo_green_dark"
                android:onClick="check"
                android:paddingLeft="@dimen/button_padding_sides"
                android:paddingRight="@dimen/button_padding_sides"
                android:text="@string/selectCharacter"
                android:textColor="@color/falloutTextColor" />

            <TextView
                android:id="@+id/quiz_part"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="50px"
                android:text="@string/quiz_header"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/answer_margin_bottom"
                android:layout_marginTop="@dimen/question_margin_top"
                android:text="@string/company_name"
                android:textSize="@dimen/question_text_size" />

            <EditText
                android:id="@+id/company_name_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/falloutTextColor"
                android:textSize="@dimen/answer_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/answer_margin_bottom"
                android:layout_marginTop="@dimen/question_margin_top"
                android:text="@string/question_pipBoy"
                android:textSize="@dimen/question_text_size" />

            <RadioGroup
                android:id="@+id/rg_q6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answer1_pip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer1_pip"
                    android:textSize="@dimen/answer_text_size" />

                <RadioButton
                    android:id="@+id/answer2_pip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer2_pip"
                    android:textSize="@dimen/answer_text_size" />

                <RadioButton
                    android:id="@+id/answer3_pip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer3_pip"
                    android:textSize="@dimen/answer_text_size" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/answer_margin_bottom"
                android:layout_marginTop="@dimen/question_margin_top"
                android:text="@string/question_cow"
                android:textSize="@dimen/question_text_size" />

            <RadioGroup
                android:id="@+id/rg_q7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answer1_cow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer1_cow"
                    android:textSize="@dimen/answer_text_size" />

                <RadioButton
                    android:id="@+id/answer2_cow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer2_cow"
                    android:textSize="@dimen/answer_text_size" />

                <RadioButton
                    android:id="@+id/answer3_cow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer3_cow"
                    android:textSize="@dimen/answer_text_size" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/answer_margin_bottom"
                android:layout_marginTop="@dimen/question_margin_top"
                android:text="@string/question_healthBoost"
                android:textSize="@dimen/question_text_size" />

            <CheckBox
                android:id="@+id/answer1_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer1_health" />

            <CheckBox
                android:id="@+id/answer2_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer2_health" />

            <CheckBox
                android:id="@+id/answer3_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer3_health" />

            <CheckBox
                android:id="@+id/answer4_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer4_health" />

            <CheckBox
                android:id="@+id/answer5_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer5_health" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/button_margin_top"
                android:background="@android:color/holo_green_dark"
                android:onClick="quiz_check"
                android:paddingLeft="@dimen/button_padding_sides"
                android:paddingRight="@dimen/button_padding_sides"
                android:text="@string/quizResults"
                android:textColor="@color/falloutTextColor" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>